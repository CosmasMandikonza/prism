{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "next", "next-auth"]
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
